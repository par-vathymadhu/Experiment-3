import java.util.*;

class str_fun
{
    public static void main(String args[])
    {
        Scanner in=new Scanner(System.in);
        System.out.println("Enter the string : ");
        String wrd=in.nextLine();
        System.out.println("Enter the character whose frequency needs to be found: ");
        char fq=in.next().charAt(0);
        wrd=wrd.toLowerCase();
        int len=wrd.length();
        char s[]=wrd.toCharArray();
        str_fun obj=new str_fun();
        obj.frequency(s,len,fq);
        obj.reverse(s,len);
    }
    void frequency(char s[],int n,char x)
    {
        int f=0;
        for(int i=0;i<n;i++)
            if(s[i]==x)
                f++;
        if(f!=0)
        System.out.println("The character occurs "+ f +" times");
        else
        System.out.println("The character is not present");
    }

    void reverse(char s[],int n)
    {
        char r[]=new char[n];
        for(int i=0;i<n;i++)
            r[i]=s[n-i-1];
        String b=new String(r);
        System.out.println(b);
    }
}
